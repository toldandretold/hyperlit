{
    "private": true,
    "type": "module",
    "scripts": {
        "php": "php artisan serve --host=127.0.0.1 --port=8000",
        "php:network": "php artisan serve --host=0.0.0.0 --port=8000",
        "queue": "php artisan queue:work",
        "dev": "vite",
        "dev:all": "concurrently -k -r -n PHP,QUEUE,DEV -c \"cyan,magenta,green\" \"npm:php\" \"npm:queue\" \"npm:dev\"",
        "dev:network": "node show-ip.js && concurrently -k -r -n PHP,QUEUE,DEV -c \"cyan,magenta,green\" \"npm:php:network\" \"npm:queue\" \"npm:dev\"",
        "build": "vite build",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.4.1",
        "@vitest/ui": "^4.0.5",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.2",
        "concurrently": "^9.2.1",
        "cross-env": "^7.0.3",
        "happy-dom": "^20.0.10",
        "jsdom": "^27.1.0",
        "laravel-vite-plugin": "^1.0",
        "lodash": "^4.17.19",
        "postcss": "^8.4.31",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.32.11",
        "sass-loader": "^11.0.1",
        "vite": "^6.2.2",
        "vite-plugin-pwa": "^0.21.1",
        "vite-plugin-static-copy": "^2.3.0",
        "vitest": "^4.0.5"
    },
    "dependencies": {
        "dompurify": "^3.2.6",
        "marked": "^15.0.12"
    }
}
